<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show fixed top-4 right-4 z-50 max-w-xs mx-auto bg-green-500 text-white rounded-lg shadow-lg p-4 transition-all transform duration-300" role="alert">
        <%= success %>
        <button type="button" class="close text-white" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>

<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show fixed top-4 right-4 z-50 max-w-xs mx-auto bg-red-500 text-white rounded-lg shadow-lg p-4 transition-all transform duration-300" role="alert">
        <%= error %>
        <button type="button" class="close text-white" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>
