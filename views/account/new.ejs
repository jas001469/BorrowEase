<% layout('layouts/boilerplate') %>

<!-- New Account Form Section -->
<div class="container mx-auto my-10 p-8 bg-white shadow-lg rounded-lg">
    <h1 class="text-3xl font-semibold text-gray-800 mb-6 text-center">Create New Account</h1>

    <form action="/accounts" method="POST" class="space-y-6">
        <!-- Name Field -->
        <div class="flex flex-col">
            <label for="name" class="text-lg text-gray-600">Name</label>
            <input type="text" id="name" name="Account[name]" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>

        <!-- Phone Field -->
        <div class="flex flex-col">
            <label for="phone" class="text-lg text-gray-600">Phone</label>
            <input type="text" id="phone" name="Account[phone]" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>

        <!-- Address Field -->
        <div class="flex flex-col">
            <label for="address" class="text-lg text-gray-600">Address</label>
            <input type="text" id="address" name="Account[address]" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>

        <!-- Email Field -->
        <div class="flex flex-col">
            <label for="email" class="text-lg text-gray-600">Email ID</label>
            <input type="email" id="email" name="Account[email]" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center">
            <button type="submit" class="bg-blue-500 text-white px-8 py-3 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400">Add Account</button>
        </div>
    </form>

    <!-- Back to All Accounts Link -->
    <div class="mt-6 text-center">
        <a href="/accounts" class="text-blue-500 hover:text-blue-700 text-lg">All Accounts</a>
    </div>
</div>


