<% layout('layouts/boilerplate') %>
    <h1><%= account.name %></h1>
    <h2><%= account.phone %></h2>
    <h3><%= account.address %></h3>
    <h4><%= account.email %></h4>
<p> <a href="/accounts/<%= account._id%>/edit">Edit Account</a>
</p>
<p>
    <form action="/accounts/<%= account._id %>?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
</p>
    <footer>
        <a href="/accounts/<%= account._id%>/edit">Edit Account</a>
        <a href="/accounts">All Accounts</a>
    </footer>

    <!-- credit: Number,
    debit: Number,
    date: String,
    description: String -->

    <form action="/accounts/<%= account._id %>/transactions" method="POST">
        <div>
            <label for="credit">Credit</label>
            <input type="number" id="credit" name="Transaction[credit]">
        </div>
        <div>
            <label for="debit">Debit</label>
            <input type="number" id="debit" name="Transaction[debit]">
        </div>
        <div>
            <label for="date">Date</label>
            <input type="text" id="date" name="Transaction[date]">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="Transaction[description]">
        </div>
        <button class="mb-3">Add Transaction</button>
    </form>
    <% for(let transaction of account.transactions){ %>
    <!-- <div class="mb-3"> -->
        <div class="card mb-3">
        <div class="card-body" >
            <p><strong>Credit:</strong> <%= transaction.credit %></p>
            <p><strong>Debit:</strong> <%= transaction.debit %></p>
            <p><strong>Date:</strong> <%= transaction.date %></p>
            <p><strong>Description:</strong> <%= transaction.description %></p>
        </div>
        <form action="/accounts/<%= account._id%>/transactions/<%= transaction._id %>?_method=DELETE" method="post">
            <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        </div>

    <!-- </div> -->
    
    <% } %>