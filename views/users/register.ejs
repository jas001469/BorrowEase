<% layout('layouts/boilerplate') %>

<!-- Main Content -->
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
        <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Register</h1>
        
        <form action="/register" method="POST" class="space-y-6" novalidate>
            <!-- Username Field -->
            <div>
                <label class="block text-sm font-medium text-gray-700" for="username">Username</label>
                <input class="mt-2 p-3 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                       type="text" id="username" name="username" required>
                <div class="text-sm text-green-500 mt-1 hidden">Looks good!</div>
            </div>

            <!-- Email Field -->
            <div>
                <label class="block text-sm font-medium text-gray-700" for="email">Email</label>
                <input class="mt-2 p-3 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                       type="email" id="email" name="email" required>
                <div class="text-sm text-green-500 mt-1 hidden">Looks good!</div>
            </div>

            <!-- Password Field -->
            <div>
                <label class="block text-sm font-medium text-gray-700" for="password">Password</label>
                <input class="mt-2 p-3 w-full border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                       type="password" id="password" name="password" required>
                <div class="text-sm text-green-500 mt-1 hidden">Looks good!</div>
            </div>

            <!-- Register Button -->
            <button type="submit" class="w-full py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition duration-300">Register</button>

            <!-- Login Link -->
            <div class="text-center">
                <p class="text-sm text-gray-500">Already have an account? <a href="/login" class="text-blue-500 hover:text-blue-700">Login</a></p>
            </div>
        </form>
    </div>
</div>
